
 <div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-twothird">
       <h1>{{recepie.name}}</h1>
        <h3>{{recepie.type}}</h3>
      <h5 class="w3-padding-32"> 
          <h3>Ingredients:</h3>  
          {{recepie.ingredients}}
      </h5>

      <p class="w3-text-grey">
          <h3>Recipe</h3>
          {{recepie.recepie}}</p>

           <div class="w3-third w3-center">
               <img  src={{recepie.img}} height="250" width="400"></img>
           </div>

        </div>
    </div>
 </div>



<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-twothird">
       <h1>Comments</h1>

       {{#each recepie.comments as |comment|}}
            <h3>{{comment.title}}</h3>
            <h5 class="w3-padding-32">   
                {{comment.message}}
            </h5>
     
       {{/each}}
       <form method="post" action="/api/comments">
           <input type="text" name="title" placeholder="title">
           <br>
           <input name="message" name="message" placeholder="message">
           <br>
           <input type="submit">
           <input type="reset">
        </form>
      </div>
   </div>
</div>





