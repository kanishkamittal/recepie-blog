
{{#each recepies as |recepie|}}
<div class="w3-row-padding w3-padding-64 w3-container">
  <div class="w3-content">
    <div class="w3-twothird">
      
       <h1>{{recepie.name}}</h1>
        <h3>{{recepie.type}}</h3>
      <h5 class="w3-padding-32"> 
          <h3>Ingredients</h3>  
          {{recepie.ingredients}}
      </h5>

      <p class="w3-text-grey">
          <h3>Recipe</h3>
          {{recepie.recepie}}</p>
          <a href="/recepies/{{recepie.id}}" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">read more...</a>
    </div>

   <div class="w3-third w3-center">
     <img  src={{recepie.img}} height="250" width="400"></img>
   </div>
  </div>
</div>
{{/each}}
